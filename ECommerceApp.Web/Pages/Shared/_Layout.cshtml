<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Bazaar</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
     <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="font-sans bg-gray-100">
    <header class="bg-white shadow">
        <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <img src="~/images/logo.png" alt="E-Bazaar Logo" class="h-10" />
                <a class="text-2xl font-bold ml-2" asp-area="" asp-page="/Index">E-Bazaar</a>
            </div>
            <button id="cart-toggle" class="flex items-center bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Cart (<span id="cart-count">0</span>)
            </button>
        </nav>
    </header>
    
    <div class="container mx-auto px-4 py-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Cart Sidebar -->
    <div id="cart-sidebar" class="fixed top-0 right-0 h-full w-80 bg-white shadow-lg transform translate-x-full transition-transform duration-300 z-50">
        <div class="p-4">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold">Shopping Cart</h2>
                <button id="cart-close" class="text-gray-600 hover:text-gray-800">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="mt-4" id="cart-items">
                <!-- Cart items will be populated dynamically -->
            </div>
            <div class="mt-4 border-t pt-4">
                <p class="text-lg font-bold">Subtotal: $<span id="cart-subtotal">0.00</span></p>
            </div>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div id="add-product-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-white p-6 rounded-lg w-full max-w-md">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-bold">Add New Product</h2>
                <button id="modal-close" class="text-gray-600 hover:text-gray-800">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <p class="text-sm text-gray-500 mt-1">Add description of your new product.</p>
            <form method="post" enctype="multipart/form-data" class="mt-4">
                <div class="mb-4">
                    <label class="block text-sm font-medium">Product Name</label>
                    <input type="text" class="w-full border p-2 rounded" required />
                </div>
                <div class="mb-4 flex items-center">
                    <div class="flex-1">
                        <label class="block text-sm font-medium">Slug</label>
                        <input type="text" class="w-full border p-2 rounded" required />
                    </div>
                    <button type="button" class="ml-2 bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300" onclick="generateSlug()">Generate</button>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium">Price</label>
                    <input type="number" step="0.01" class="w-full border p-2 rounded" required />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium">Discount Start</label>
                    <input type="date" class="w-full border p-2 rounded" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium">Discount End</label>
                    <input type="date" class="w-full border p-2 rounded" />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium">Discount Percentage</label>
                    <input type="number" step="0.01" class="w-full border p-2 rounded"  />
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium">Product Image</label>
                    <input type="file" class="w-full border p-2 rounded" accept="image/*" />
                </div>
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded w-full hover:bg-blue-600">Add</button>
            </form>
        </div>
    </div>

    <footer class="border-t footer text-gray-500 mt-6">
        <div class="container mx-auto px-4 py-4">
            © 2025 - E-Bazaar
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        // Modal and Sidebar Toggle
        const cartToggle = document.getElementById('cart-toggle');
        const cartSidebar = document.getElementById('cart-sidebar');
        const cartClose = document.getElementById('cart-close');
        const addProductToggle = document.getElementById('add-product-toggle');
        const addProductModal = document.getElementById('add-product-modal');
        const modalClose = document.getElementById('modal-close');

        cartToggle.addEventListener('click', () => {
            cartSidebar.classList.toggle('translate-x-full');
            cartSidebar.classList.toggle('translate-x-0');
        });

        cartClose.addEventListener('click', () => {
            cartSidebar.classList.add('translate-x-full');
            cartSidebar.classList.remove('translate-x-0');
        });

        addProductToggle.addEventListener('click', () => {
            addProductModal.classList.remove('hidden');
        });

        modalClose.addEventListener('click', () => {
            addProductModal.classList.add('hidden');
        });

        // Generate Slug
        function generateSlug() {
            const nameInput = document.querySelector('input[asp-for="NewProduct.Name"]');
            const slugInput = document.querySelector('input[asp-for="NewProduct.Slug"]');
            if (nameInput.value) {
                slugInput.value = nameInput.value.toLowerCase().replace(/\s+/g, '-');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>