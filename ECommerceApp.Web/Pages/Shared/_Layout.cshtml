<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Bazaar</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-[#F8FBFF] text-[#252C32]">
    <header class="bg-white shadow-sm">
        <nav class="container mx-auto px-3 py-4 flex justify-between items-center">
            <div class="flex items-center">
                <a class="text-[28px] font-bold text-[#2F80ED]" href="/">E-Bazaar</a>
            </div>
            <button id="cart-toggle"
                class="flex items-center bg-[#F7F7F7] text-[#252C32] font-semibold text-[16px] px-4 py-2 rounded-lg hover:bg-[#E5E9EB] border border-[#E5E9EB] transition">
                <svg class="w-5 h-5 mr-2 text-[#2F80ED]" fill="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M3 3h2l.4 2H21l-4 8H7l-1.6-6H3V3zm4 13a2 2 0 110 4 2 2 0 010-4zm10 0a2 2 0 110 4 2 2 0 010-4z" />
                </svg>
                Cart (<span id="cart-count">0</span>)
            </button>
        </nav>
    </header>

    <div class="container mx-auto px-4 py-8">
        <main role="main" class="min-h-screen">
            @RenderBody()
        </main>
    </div>

    <div id="cart-sidebar"
        class="fixed top-0 right-0 h-full w-72 sm:w-80 md:w-96 bg-white shadow-2xl transform translate-x-full transition-transform duration-300 z-50 flex flex-col">
        <div class="p-6 flex-1 flex flex-col">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-[24px] font-bold text-[#252C32]">Shopping Cart</h2>
                <button id="cart-close" class="text-[#777777] hover:text-[#252C32]">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>
            <div id="cart-items" class="mt-4 flex-1"></div>
            <div class="pt-4 mt-auto">
                <div class="flex justify-between items-center">
                    <p class="text-[18px] font-semibold text-[#252C32]">Subtotal</p>
                    <p class="text-[18px] font-semibold text-[#252C32]">$<span id="cart-subtotal">0.00</span></p>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-t border-[#E5E9EB] bg-white mt-8">
        <div class="container mx-auto px-4 py-4 text-[14px] text-[#777777]">
            © 2025 - E-Bazaar
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const API_BASE_URL_Layout = 'http://localhost:5099';
        const cartToggle = document.getElementById('cart-toggle');
        const cartSidebar = document.getElementById('cart-sidebar');
        const cartClose = document.getElementById('cart-close');
        const cartItemsContainer = document.getElementById('cart-items');
        const cartCount = document.getElementById('cart-count');
        const cartSubtotal = document.getElementById('cart-subtotal');
        const userId_Layout = '1'; 

        async function loadCart() {
            try {
                const response = await fetch(`${API_BASE_URL_Layout}/api/cart/${userId_Layout}`, {
                    method: 'GET',
                    headers: { 'Accept': 'application/json' }
                });
                if (!response.ok) {
                    throw new Error(`Failed to fetch cart: ${await response.text()}`);
                }
                const cartItems = await response.json();
                renderCartItems(cartItems);
            } catch (err) {
                console.error('Error loading cart:', err);
                cartItemsContainer.innerHTML = '<p class="text-sm text-[#777777]">Error loading cart</p>';
                cartCount.textContent = '0';
                cartSubtotal.textContent = '0.00';
            }
        }

        function renderCartItems(cartItems) {
            if (!Array.isArray(cartItems) || cartItems.length === 0) {
                cartItemsContainer.innerHTML = '<p class="text-sm text-[#777777]">Your cart is empty</p>';
                cartCount.textContent = '0';
                cartSubtotal.textContent = '0.00';
                return;
            }

            let totalItems = 0;
            let subtotal = 0;

            cartItemsContainer.innerHTML = cartItems.map(item => {
                const product = item.product;
                const price = item.product.discountedPrice || item.product.price;
                const itemTotal = price * item.quantity;
                subtotal += itemTotal;
                totalItems += item.quantity;

                return `
                <div class="mb-4 pb-4 border-b border-dashed border-[#E5E9EB]">
                    <div class="flex items-center justify-between">
                        <div class="w-16 h-16 flex-shrink-0 rounded overflow-hidden bg-gray-100">
                            <img src="${API_BASE_URL_Layout}${product.imageUrl || '/images/placeholder.jpg'}" alt="${product.name}" class="w-full h-full object-cover">
                        </div>
                        <div class="ml-4 flex-1">
                            <p class="font-medium text-[#252C32] text-sm">${product.name}</p>
                            <p class="text-xs text-[#5F6D7E] mt-1">Qty: ${item.quantity}</p>
                        </div>
                        <div class="text-right text-sm font-semibold text-[#252C32]">
                            $${price.toFixed(2)}
                        </div>
                    </div>
                </div>
            `;
            }).join('');

            cartCount.textContent = totalItems;
            cartSubtotal.textContent = subtotal.toFixed(2);
        }

        cartToggle?.addEventListener('click', () => {
            cartSidebar.classList.toggle('translate-x-full');
            cartSidebar.classList.toggle('translate-x-0');
            if (!cartSidebar.classList.contains('translate-x-full')) {
                loadCart();
            }
        });

        cartClose?.addEventListener('click', () => {
            cartSidebar.classList.add('translate-x-full');
            cartSidebar.classList.remove('translate-x-0');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>